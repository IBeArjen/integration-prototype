[alias]
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    ci = commit
    co = checkout
    st = status
    br = branch

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true

[color "branch"]
    current = green bold
    local = green
    remote = red bold

[color "diff"]
    meta = blue bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green bold
    changed = blue bold
    untracked = red

[diff]
    algorithm = patience

[push]
    default = current


